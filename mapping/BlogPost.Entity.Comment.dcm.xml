<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="BlogPost\Entity\Comment" table="blog_post_comments">
        <id name="id" column="id" length="1024" type="string"/>
        <field name="content" column="content" length="1024" type="text"/>
        <field name="time" column="time" type="datetime"/>
        <many-to-one target-entity="Authentication\Entity\User" field="author">
            <join-column name="author_id" referenced-column-name="email_address" nullable="false"/>
        </many-to-one>
        <many-to-one target-entity="BlogPost\Entity\BlogPost" field="blogPost" inversed-by="comments">
            <join-column name="blog_post_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
