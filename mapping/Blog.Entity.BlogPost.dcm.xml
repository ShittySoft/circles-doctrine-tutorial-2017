<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Blog\Entity\BlogPost" table="blog_posts">
        <cache usage="NONSTRICT_READ_WRITE"/>
        <id name="id" column="id" type="string" length="36"/>
        <field name="title" column="title" type="string" length="1024"/>
        <field name="contents" column="contents" type="text"/>
        <one-to-many target-entity="Blog\Entity\Comment" mapped-by="blogPost" field="comments">
            <cache usage="NONSTRICT_READ_WRITE"/>
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        <many-to-one target-entity="Authentication\Entity\User" field="author">
            <cache usage="READ_ONLY"/>
            <join-column name="author_id" referenced-column-name="email_address" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
